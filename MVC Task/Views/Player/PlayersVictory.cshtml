@using MVC_Task.ViewModels


<div class="text-center">
    @switch (@CharacterViewModel.SpecialNpcMet)
    {
        case "Vampire":
            <h2>You found out that he was a vampire. But you were strong enough to win him in the battle. But, you had to leave the city</h2>
            <img src="/Images/VampireEnding.png" alt="vampire" width="500" height="700">
            break;
        case "Mage":
            <h1>You found out that he was a mage. It was a great opportunity to test your skills. You were strong enough to win him in the battle. But, accidentally you burnt down the city.</h1>
            <img src="/Images/MageEnding.jpg" alt="vampire" width="1000" height="700">
            break;
    }

    <h1>Name: @CharacterViewModel.Name</h1>
    <h2>Race: @CharacterViewModel.Race</h2>
    <h2>Ending: Won</h2>
    <h2>Status: Alive</h2>
    <h2>Money: @CharacterViewModel.FormatMoney()</h2>
    <h2>Turns: @CharacterViewModel.AmountOfTurns</h2>
    <button type="button" class="btn btn-success btn-lg btn-block" onclick="location.href = '@Url.Action("ShowScoreTable", "Player")'">Score table</button>

</div>
